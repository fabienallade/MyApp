<div class="align-content-center">
  <h1 align="center"><%=@publication.name.capitalize %></h1>
  <div class="col-md-6 offset-4">
    <h4 class="center method-description"><strong>Description: </strong></h4>
    <hr>
    <%=@publication.description %>
    <p>
    <hr>
    <br>
    <div class="publication_actions card card-footer">
