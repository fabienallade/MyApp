      <%=link_to "Delete ",publication_path(@publication),class: "btn btn-danger",method: :delete,data:{confirm:"est tu sur de ca ????"} %>
    </div>
    <div class="float-left">
      <small class="float-left" >
        <%=@publication.user.name %>
      </small>
    </div>

    <%= form_for :comments ,url:"/comments" do |f| %>
       Comments  <%= f.text_field :comments ,class:"form-control" %><br />
      <%= f.submit class:"btn btn-secondary" %>
    <% end %>

    </p>
  </div>

